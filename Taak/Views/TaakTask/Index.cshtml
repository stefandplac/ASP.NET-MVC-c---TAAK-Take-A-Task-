@model IEnumerable<Taak.Models.TaakTaskModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminCMSLayout";
}
<div class="border-bottom">
<h5>All Posted Tasks</h5>
</div>

@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Buget)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpecialRequirements)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Buget)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecialRequirements)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                   
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-danger" asp-controller="TaakTask" asp-action="Delete" asp-route-id="@item.IdTask">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div>You have not posted yet any tasks</div>
}
